<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <link rel="stylesheet" href="/style.css?v=1.0">
    <link rel="icon" href="/images/logo.png">
    <title><%= title ? `${title} | AUDRES25` : 'AUDRES25' %></title>
    <style>
  @media (max-width: 900px) {
      .unau {
        width: 80% !important;
      }
      body {
        display: block;
        overflow-y: auto;
      }
      .header1 {
        flex-direction: column;
        height: auto;
        gap: 5px;
      }
      .header1 .plate {
        height: 65px;
      }
      #lgCard > div {
        width: 80% !important;
      }
  }
    </style>
</head>
<% if ( user.access === 0) { %>
<body class="col padding0">
<div class="mainF overflow-y1 block abstractBG">
  <%- body %>
</div>
<div class="floatF fixed height0 glass shadow2 translateX width0 padding10 gap5 bottom20" style="border-radius: 30px;">
  <a href="/hom" class="nav cnav liquid"><i class="fas fa-home"></i></a>
  <a href="/req" class="nav cnav liquid"><i class="fas fa-plus"></i></a>
  |
  <a href="/prf" class="nav cnav">
    <img src="<%= user.photo ? '/uploads/' + user.photo : '/images/profile.png' %>" 
     alt="Profile"
     onerror="this.onerror=null; this.src='/images/profile.png';">
  </a>
</div>

<div class="floatB hidden fixed height0 glass shadow2 translateX width0 padding10 gap5 bottom20" style="border-radius: 30px;">
  <a href="/hom" class="nav cnav liquid"><i class="fas fa-home"></i></a>
  <a href="/req" class="nav cnav liquid"><i class="fas fa-plus"></i></a>
  |
  <a href="javascript:void(0)" class="nav cnav liquid" id="lgOpen"><i class="fas fa-share-square"></i></a>
</div>


<div class="absolute translateCenter bgModal8 hidden" id="lgCard">
  <div class="bgWhite cornerRem2 height0 width25 col padding20">
    <%- include('icons/bell') %>
    <p class="rem14 textCenter">Are you sure you want to log out?</p>
    <div class="height0 marginTop10 gap10">
      <a href="javascript:void(0)" class="nav w100" id="lgClose"> Cancel</a>
      <a href="/logout" class="nav pnav w100"> Log Out</a>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const lgOpen = document.getElementById('lgOpen');
  const lgClose = document.getElementById('lgClose');
  const lgCard = document.getElementById('lgCard');

  // Open the logout modal
  lgOpen.addEventListener('click', () => {
    lgCard.classList.remove('hidden');
  });

  // Close the logout modal
  lgClose.addEventListener('click', () => {
    lgCard.classList.add('hidden');
  });

  // Optional: close modal when clicking outside
  lgCard.addEventListener('click', (e) => {
    if (e.target === lgCard) {
      lgCard.classList.add('hidden');
    }
  });
});
</script>


</body>
<% } else { %>
<body class="padding0 abstractBG" id="body2">
  <div class="">
    <div class="width30 bgWhite height0 cornerRem14 padding20 col colorPrimary unau">
      <%- include('icons/warning') %>
      <p class="rem3 str500">Unauthorized Access</p>
      <p class="rem15 str400">Do not access this page!</p>
      <br>
      <a href="javascript:history.back()" class="nav"><i class="fas fa-chevron-left"></i>Go Back</a>
    </div>
  </div>
</body>
<% } %>
</html>