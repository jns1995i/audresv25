
<div class="height0 padding0 corner12 gap5">
  <section class="width0 padding15 gap10">
    <a href="/vrf" class="nav tnav <% if ( title === 'To Verify' && active === 'srv') { %> active <% } %>"><i class="fas fa-user-check"></i> To Verify</a>
    <a href="/srv" class="nav tnav <% if ( title === 'Transactions' && active === 'srv') { %> active <% } %>"><i class="fas fa-hourglass-half"></i> Pending</a>
    <a href="/prc" class="nav tnav <% if ( title === 'Processing' && active === 'srv') { %> active <% } %>"><i class="fas fa-clock"></i> Processing</a>
    <a href="/apr" class="nav tnav <% if ( title === 'Approved' && active === 'srv') { %> active <% } %>"><i class="fas fa-check-circle"></i> Approved</a>
    <a href="/rel" class="nav tnav <% if ( title === 'For Release' && active === 'srv') { %> active <% } %>"><i class="fas fa-dolly wMin20"></i> For Release</a>
    <a href="/srvAll" class="nav tnav <% if ( title === 'All Transactions' && active === 'srv') { %> active <% } %>"><i class="fas fa-list wMin20"></i> All Transactions</a>
  </section>
</div>

<hr class="">

<% let loopRequests = (['Admin', 'Head', 'Dev'].includes(user.role)) ? requests : userRequests; %>

<% if (loopRequests.length === 0) { %>
  <div class="height0 marginTop5 corner12 gap5">
    <div class="width90 gap5 justifyBetween">
      <p class="rem28 str400">
        No Transaction
      </p>
      <div class="width50 gap5 justifyEnd opacity0">
        <div class="searchBar colorPrimary">
          <i class="fas fa-search"></i>
          <input type="search" name="" id="univ" class="width0 widthMin30 widthMax0">
        </div>
        <div class="selectBar hidden">
          <i class="fas fa-filter colorPrimary"></i>
          <select name="" id="">
            <option value="Today">Today</option>
          </select>
        </div>
      </div>
    </div>
  </div>
<% } else if (loopRequests.length === 1) { %>
  <div class="height0 marginTop5 corner12 gap5">
    <div class="width90 justifyBetween gap5">
      <p class="rem28 str400">
       1 Transaction
      </p>
      <div class="width50 gap5 justifyEnd">
        <div class="searchBar colorPrimary hidden">
          <i class="fas fa-search"></i>
          <input type="search" name="" id="univ" class="width0 widthMin30 widthMax0">
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="height0 marginTop5 corner12 gap5">
    <div class="width90 justifyBetween gap5">
      <p class="rem28 str400">
       <%= loopRequests.length %> Transactions
      </p>
      <div class="width50 gap5 justifyEnd">
        <div class="searchBar colorPrimary">
          <i class="fas fa-search"></i>
          <input type="search" name="" id="univ" class="width0 widthMin30 widthMax0">
        </div>
        <div class="selectBar hidden">
          <i class="fas fa-filter colorPrimary"></i>
          <select name="" id="">
            <option value="Today">Today</option>
          </select>
        </div>
      </div>
    </div>
  </div>
<% } %>
